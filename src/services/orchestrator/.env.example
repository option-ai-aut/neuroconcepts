# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# Server
PORT=3001

# AWS Cognito
USER_POOL_ID=your-user-pool-id
CLIENT_ID=your-client-id

# OpenAI (GPT-5 mini)
OPENAI_API_KEY=your-openai-api-key

# Encryption (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY="your-secure-encryption-key-min-32-chars"

# Google Calendar OAuth
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret

# For local development:
# GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3001/calendar/google/callback

# For online dev/production:
GOOGLE_CALENDAR_REDIRECT_URI=https://1rnmc2z8eg.execute-api.eu-central-1.amazonaws.com/dev/calendar/google/callback

# Microsoft OAuth
# Get credentials from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# For local development:
# MICROSOFT_REDIRECT_URI=http://localhost:3001/calendar/outlook/callback

# For online dev/production:
MICROSOFT_REDIRECT_URI=https://1rnmc2z8eg.execute-api.eu-central-1.amazonaws.com/dev/calendar/outlook/callback

# Frontend URL for OAuth redirects
# For local development:
# FRONTEND_URL=http://localhost:3000

# For online dev/production (update with your CloudFront domain):
FRONTEND_URL=https://your-cloudfront-domain.cloudfront.net

# Stripe (stored in AWS Secrets Manager in production)
# Keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# Webhook secret from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-signing-secret
# Set to 'true' when ready to charge customers
BILLING_ENABLED=false

# Internal service-to-service auth (email-parser -> orchestrator)
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=your-internal-api-secret
